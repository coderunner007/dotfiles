#
# program shortcuts
#
# terminal emulator
alt + shift + t
	~/.config/sxhkd/isWindowOpen "Alacritty" alacritty
# Browser - Firefox
alt + shift + b
	~/.config/sxhkd/isWindowOpen "Firefox" firefox
# File Manager - Thunar
alt + shift + e
	~/.config/sxhkd/isWindowOpen "thunar" thunar
# calculator
alt + shift + c
	~/.config/sxhkd/isWindowOpen "Gnome-calculator" gnome-calculator
# Signal
alt + shift +  s
	~/.config/sxhkd/isWindowOpen "Signal" "gtk-launch org.signal.Signal"
# Obsidian
alt + shift +  o
	~/.config/sxhkd/isWindowOpen "obsidian" "gtk-launch md.obsidian.Obsidian"
# KeepassXC
alt + shift + p
	~/.config/sxhkd/isWindowOpen "KeePassXC" "gtk-launch org.keepassxc.KeePassXC"
# VLC
alt + shift +  v
	~/.config/sxhkd/isWindowOpen "vlc" "gtk-launch vlc"
# Mail - Thunderbird
alt + shift +  x
	~/.config/sxhkd/isWindowOpen "Thunderbird" "gtk-launch thunderbird"
#
# Reload config
#
# bspwm
super + alt + c
        ~/.config/bspwm/bspwmrc
# sxhkd
super + alt + shift + c
	pkill -USR1 -x sxhkd
#
# Close and kill windows
#
alt + {_,shift + }F4
	bspc node -{c,k}
alt + {_,shift + }q
	bspc node -{c,k}
#
# toggle layouts
#
# alternate between the tiled and monocle layout
super + w
	bspc desktop -l next
# alternate between vertical and horizontal layout
super + e
        bspc node @/ -R 90
#
# window options (resize, move, select)
#
# focus the node in the given direction (vim-like)
super + {_,shift + }{j,k,l,semicolon}
	bspc node -{f,s} {west,south,north,east}
# focus the node in the given direction (arrows)
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
# resize (vim-like)
super + alt + {j,k,l,semicolon}
  n=10; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy
# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
# focus cycle through nodes of unique applications
super + {_,shift + }c
	bspc node -f {next,prev}.leaf.!same_class
# focus cycle the next/previous node of the same application
super + {_,shift + }d
	bspc node -f {next,prev}.same_class
# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local
# set the window state
super + {t,shift + t,shift+f,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# # set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
# Follow pointer focus on/off
super + alt + p
	bspc config focus_follows_pointer {true,false}

